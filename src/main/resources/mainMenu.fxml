<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="menuRoot" fx:controller="com.comp2042.MainMenuController"
           xmlns:fx="http://javafx.com/fxml"
           style="-fx-background-color: radial-gradient(radius 150%, #020617, #0b1120);">

    <VBox alignment="CENTER" spacing="20"
          style="-fx-padding: 40;">
        <Label fx:id="titleLabel" text="TETRIS"
               style="-fx-text-fill: #f8fafc; -fx-font-size: 48px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(2,6,23,0.8), 20, 0.3, 0, 6);"/>
        <Label fx:id="subtitleLabel" text="Stack. Rotate. Survive."
               style="-fx-text-fill: #94a3b8; -fx-font-size: 16px;"/>

        <VBox fx:id="menuCard" spacing="16" alignment="CENTER"
              style="-fx-padding: 30 60; -fx-background-color: rgba(15,23,42,0.75); -fx-background-radius: 20; -fx-border-color: rgba(255,255,255,0.05); -fx-border-width: 1; -fx-border-radius: 20;">
            <VBox spacing="8" alignment="CENTER">
                <Label text="HIGH SCORE" style="-fx-text-fill: #94a3b8; -fx-font-size: 11px; -fx-letter-spacing: 1px;"/>
                <Label fx:id="highScoreLabel" text="0" style="-fx-text-fill: #facc15; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            </VBox>
            <Separator style="-fx-background-color: rgba(255,255,255,0.08); -fx-pref-width: 180;"/>
            <VBox spacing="6" alignment="CENTER">
                <Label fx:id="themeLabel" text="SELECT THEME" style="-fx-text-fill: #cbd5f5; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="themePicker" prefWidth="220"
                          style="-fx-background-radius: 10; -fx-border-radius: 10;"/>
            </VBox>
            <Button fx:id="startButton" text="Start Game"
                    onAction="#handleStartGame"
                    style="-fx-background-color: linear-gradient(to right, #6366f1, #8b5cf6); -fx-background-radius: 12; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 220; -fx-pref-height: 48;"/>
            <Button fx:id="exitButton" text="Exit"
                    onAction="#handleExit"
                    style="-fx-background-color: transparent; -fx-border-color: rgba(148,163,184,0.6); -fx-border-width: 2; -fx-border-radius: 12; -fx-text-fill: #cbd5f5; -fx-font-size: 14px; -fx-pref-width: 220; -fx-pref-height: 44;"/>
        </VBox>

        <Label fx:id="footerLabel" text="Â© 2025 TetrisJFX"
               style="-fx-text-fill: rgba(248,250,252,0.5); -fx-font-size: 12px;"/>
    </VBox>

</StackPane>

