<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>


<Pane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    <VBox spacing="5" style="-fx-padding: 10;">
        <Label fx:id="scoreLabel" text="Score: 0" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
        <Label fx:id="linesLabel" text="Lines: 0" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
        <Label fx:id="timerLabel" text="Time: 00:00" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
    </VBox>
    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
        <!-- Next Piece Preview Section -->
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label fx:id="nextPieceLabel" text="Next Pieces" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            <VBox spacing="5">
                <Label text="Next:" style="-fx-font-size: 12px; -fx-text-fill: white;"/>
                <GridPane fx:id="nextPiecePanel" hgap="2" vgap="2"/>
            </VBox>
        </VBox>
        <!-- Pause Overlay -->
        <VBox fx:id="pauseOverlay" alignment="CENTER" style="-fx-background-color: rgba(0,0,0,0.7);" visible="false">
            <Label fx:id="pauseLabel" text="PAUSED" style="-fx-font-size: 24px; -fx-text-fill: yellow; -fx-font-weight: bold;"/>
        </VBox>



    </BorderPane>

    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>